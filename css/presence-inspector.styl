.presence-inspector
  background: rgba(#000, 0.8)
  bottom: 0
  color: #fff
  left: 0
  overflow: hidden
  position: absolute
  right: 0
  top: 0
  transition:
    opacity 0.5s ease-in-out,
    transform 0.5s ease-in-out

  &.offscreen
    opacity: 0
    transform: translateX(100%)

  IMAGES_TO_COMPARE = 4
  INDIVIDUAL_WIDTH = 75
  INDIVIDUAL_MARGIN = 5

  .all-images
    bottom: 3%
    left: 50%
    position: absolute
    top: 3%
    transition: transform 0.5s ease-in-out
    transform: translateX(-50%)
    width: (INDIVIDUAL_WIDTH)%

    for i in 0...IMAGES_TO_COMPARE
      &[data-on-image={s('"%s"', i)}]
        transform: translateX((-50 - (i * (100 + INDIVIDUAL_MARGIN)))%)

        > .individual-image:nth-child({i + 1})
          opacity: 1
          pointer-events: auto

  .individual-image
    display: table
    height: 100%
    left: 0
    opacity: 0.33
    pointer-events: none
    position: absolute
    top: 0
    width: 100%
    transition: opacity 0.5s ease-in-out

    for i in 0...IMAGES_TO_COMPARE
      &:nth-child({i + 1})
        left: (i * (100 + INDIVIDUAL_MARGIN))%

    > div
      display: table-row

      > div
        display: table-cell

  .image-container
    text-align: center

  .image-wrapper
    height: 100%
    position: relative
    width: 100%

    img
      position: absolute
      left: 50%
      top: 50%
      max-height: 100%
      transform: translate(-50%, -50%)

  .image-options
    height: 1%
