.presence-inspector
  background: rgba(#000, 0.8)
  bottom: 0
  color: #fff
  left: 0
  overflow-x: hidden
  overflow-y: auto
  position: fixed
  right: 0
  top: 0
  transition:
    opacity 0.5s ease-in-out,
    transform 0.5s ease-in-out

  &.offscreen
    opacity: 0
    transform: translateX(100%)

  IMAGES_TO_COMPARE = 6 // Probably only four, though
  INDIVIDUAL_MARGIN = 5

  .individual-images
    left: 50%
    position: absolute
    text-align: center
    top: 2rem
    transition: transform 0.5s ease-in-out
    transform: translateX(-50%)
    width: 75%

    for i in 0...IMAGES_TO_COMPARE
      &[data-on-image={s('"%s"', i)}]
        transform: translateX((-50 - (i * (100 + INDIVIDUAL_MARGIN)))%)

        > .individual-image:nth-child({i + 1})
          opacity: 1
          pointer-events: auto
          z-index: 1

    .individual-image
      for i in 0...IMAGES_TO_COMPARE
        &:nth-child({i + 1})
          left: (i * (100 + INDIVIDUAL_MARGIN))%
