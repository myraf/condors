.presence-inspector
  background: rgba(#000, 0.8)
  bottom: 0
  color: #fff
  left: 0
  overflow-x: hidden
  overflow-y: auto
  position: fixed
  right: 0
  top: 0
  transition:
    opacity 0.5s ease-in-out,
    transform 0.5s ease-in-out

  &.offscreen
    opacity: 0
    transform: translateX(100%)

  IMAGES_TO_COMPARE = 6 // Probably only four, though
  INDIVIDUAL_MARGIN = 5

  .all-images
    left: 50%
    position: absolute
    text-align: center
    top: 50%
    transition: transform 0.5s ease-in-out
    transform: translateX(-50%)
    width: 75%

    for i in 0...IMAGES_TO_COMPARE
      &[data-on-image={s('"%s"', i)}]
        transform: translateX((-50 - (i * (100 + INDIVIDUAL_MARGIN)))%)

        > .individual-image:nth-child({i + 1})
          opacity: 1
          pointer-events: auto

  .individual-image
    left: 0
    opacity: 0.33
    pointer-events: none
    position: absolute
    top: 0
    width: 100%
    transform: translateY(-50%)
    transition: opacity 0.5s ease-in-out

    for i in 0...IMAGES_TO_COMPARE
      &:nth-child({i + 1})
        left: (i * (100 + INDIVIDUAL_MARGIN))%

  .image-container
    background: MEDIUM_GRAY
    border-radius: 5px

  .other-image
    height: 375px
    width: 675px

  .instructions
    margin: 0.5em 0

  .toggle-button-group button
    @extends #_TOGGLE_BUTTON

  .step
    font-size: 12px
    opacity: 0.5
