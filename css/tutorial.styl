.zootorial-tutorial
  background: MEDIUM_GRAY
  color: white
  font-size: 16px
  line-height: 26px
  padding: 1em
  transition: transform 0.25s
  width: 420px

  .zootorial-close
    height: 1em
    line-height: 1
    position: absolute
    right: 0
    top: 0
    width: 1em

  .zootorial-header
    @extends #_SIDE_RULED
    font-size: 12px
    letter-spacing: 2px
    opacity: 0.67
    text-align: center
    text-transform: uppercase

  .zootorial-instruction
    background: white
    color: MEDIUM_GRAY
    font-weight: BOLD
    margin-top: 1em
    padding: 0 4px
    text-align: center

  .zootorial-footer
    text-align: center
    margin-top: 1em

    button
      @extends #_STANDARD_BUTTON
      padding: 0 1.25em

  .zootorial-arrow
    border: 1em solid transparent
    height: 0
    left: 50%
    margin: -1em 0 0 -1em
    top: 50%
    width: 0

    &[data-zootorial-position="up"]
      border-bottom-color: MEDIUM_GRAY
      border-top-width: 0
      top: 0

    &[data-zootorial-position="right"]
      border-left-color: MEDIUM_GRAY
      border-right-width: 0
      left: calc(100% + 1em)

    &[data-zootorial-position="down"]
      border-bottom-width: 0
      border-top-color: MEDIUM_GRAY
      top: calc(100% + 1em)

    &[data-zootorial-position="left"]
      border-left-width: 0
      border-right-color: MEDIUM_GRAY
      left: 0

@keyframes CONDOR_TUTORIAL_ACTIONABLE
  0%
    box-shadow: 0 0 1px lime

  100%
    box-shadow: 0 0 5px lime

[data-zootorial-actionable]:not(:disabled):not(.selected)
  animation: CONDOR_TUTORIAL_ACTIONABLE 500ms infinite alternate
