.condor-bio-page
  margin: 0 auto
  width: 50%
  text-align: center

  .sex
    font-size: 12px

  .infos
    border: 0 solid rgba(BLUEISH, 0.5)
    border-width: 1px 0
    display: table
    margin: 1em 0
    table-layout: fixed
    width: 100%

  .info
    border-left: 1px solid rgba(BLUEISH, 0.25)
    display: table-cell
    padding: 10px
    vertical-algin: top

    &:first-child
      border-left-width: 0

    .title
      color: BLUEISH
      font-size: 12px
      font-weight: bold
      letter-spacing: 1px
      text-transform: uppercase;
