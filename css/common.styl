SITE_WIDTH = 90%

DARK_GRAY = rgb(39, 48, 56)
MEDIUM_GRAY = rgb(76, 83, 93)
LIGHT_GRAY = rgb(136, 143, 153)

BLUEISH = rgb(99, 188, 246)

BOLD = 900
REGULAR = 400
LIGHT = 300

#_STANDARD_BUTTON
  border: 1px solid
  border-radius: 0.25em
  display: inline-block
  margin: 0 0.2em
  padding: 0.4em 1.6em
  transition: background 150ms, color 150ms
  vertical-align: middle

#_TOGGLE_BUTTON
  @extends #_STANDARD_BUTTON

  border-right-width: 0
  border-radius: 0
  margin: 0

  &:first-child
    border-radius: 0.3em 0 0 0.3em

  &:last-child
    border-radius: 0 0.3em 0.3em 0
    border-right-width: 1px

  &.selected
    box-shadow: 0 0 1.5em inset

#_COLUMN
  border-top: 1px solid LIGHT_GRAY
  box-sizing: border-box
  float: left
  padding: 1em 2em 1em 0
  margin: 1em 0

  img,
  svg
    max-width: 100%

is-a-column(cols)
  @extends #_COLUMN

  width: unit(100 / cols, '%')

  &:nth-child({cols}n)
    padding-right: 0

  &:nth-child({cols}n+1)
    clear: left

