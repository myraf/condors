.site-navigation
  AVERAGE_BG = ((DARK_GRAY + MEDIUM_GRAY) / 2)

  background: AVERAGE_BG url("./images/nav-bg.jpg") bottom right
  background-size: cover
  color: #fff
  min-height: 80px
  overflow: hidden
  position: relative

  .content-container
    margin-top: 50px
    line-height: 1
    text-align: right

  .logo
    float: left
    font-size: 20px
    letter-spacing: 2px
    text-transform: uppercase

  .links
    margin-left: -10px

    a
      display: inline-block
      margin: 0 10px
      padding: 5px 0

      &.active
        border-bottom: 1px solid

.zooniverse-top-bar
  background: transparent
  margin-top: 15px
  margin-right: unit((100 - SITE_WIDTH) / 2, '%')

  .corner
    display: none

  .avatar img
    border-radius: 50%
