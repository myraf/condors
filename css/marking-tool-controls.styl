.marking-tool-controls
  ARROW_SIZE = 10

  background: rgba(#fff, 0.8)
  border-radius: 5px
  box-shadow: 0 3px 10px rgba(#000, 0.2)
  display: none
  font-size: 12px
  margin-top: unit(((ARROW_SIZE * 2) + 10), px)
  text-align: left
  transform: translate(-50%, 0)
  transition:
    margin-top 0.5s ease-in-out,
    transform 0.5s ease-in-out
  width: 300px

  &.tool-selected
    display: block

  &:before
    border: unit(ARROW_SIZE, px) solid transparent
    content: ""
    left: 50%
    margin-left: unit((-1 * ARROW_SIZE), px)px
    position: absolute

  &.opens-down:before
    border-bottom-color: rgba(#fff, 0.8)
    border-top-width: 0
    bottom: 100%

  &.opens-up
    margin-top: unit(((ARROW_SIZE * -2) - 10), px)
    transform: translate(-50%, -100%)

    &:before
      border-bottom-width: 0
      border-top-color: rgba(#fff, 0.8)
      top: 100%

  .marking-tool-controls-controller
    transition: height 0.25s ease-in-out;

  header
    font-weight: bold
    padding: 10px

  section
    border-top: 1px solid #999
    padding: 10px
    position: relative
    transition:
      left 0.25s ease-in-out,
      opacity 0.25s ease-in-out

    &.hidden
      opacity: 0
      z-index: -1

      &.before
        left: -10px

      &.after
        left: 10px

  footer
    border-top: 1px solid #999
    padding: 10px
    text-align: center

    button
      @extends #_STANDARD_BUTTON
      background: #fff

  button[name="to-select"]
    height: 1em
    position: relative
    transition:
      margin-left 0.25s ease-in-out,
      opacity 0.25s ease-in-out
    width: 1em

    &.hidden
      margin-left: -20px
      opacity: 0

  .selected-animal-example
    border-radius: 50%
    display: inline-block
    height: auto
    margin: 0
    transition:
      height 0.5s ease-in-out,
      width 0.5s ease-in-out
    vertical-align: middle
    width: 60px

    &.major
      width: 100%
      height: auto

  .selected-animal-label
    margin: 20px 10px 0
    transition: opacity 0.25s ease-in-out
    position: absolute

    &.hidden
      opacity: 0
