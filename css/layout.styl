html
  color: MEDIUM_GRAY
  font: 16px MAIN_FONT_FAMILY
  font-weight: 300
  position: relative

body
  margin: 0

.content-block
  padding: 1rem 0

  &.reversed
    background: DARK_GRAY
    color: #fff

.content-container
  margin: 0 auto
  width: SITE_WIDTH

h1
  font-size: 42px
  font-weight: inherit
  margin: 3rem 0

  & ~ p
    font-size: 18px
    margin: 3rem 0

h2
  font-size: 18px
  font-weight: 900
  letter-spacing: 2px
  margin: 2rem 0
  text-transform: uppercase

  & + p
    font-size: 28px
    margin: 2rem 0

a
  color: inherit
  text-decoration: none

button
  appearance: none
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  margin: 0
  padding: 0

  &:disabled
    opacity: 0.5
    pointer-events: none
