html
  color: MEDIUM_GRAY
  font: 16px MAIN_FONT_FAMILY
  font-weight: 300
  height: 100%
  overflow: auto
  position: relative

body
  margin: 0

.content-block
  padding: 1rem 0

  &.reversed
    background: DARK_GRAY
    color: #fff

.content-container
  clearfix()
  margin: 0 auto
  width: SITE_WIDTH

.quarter-column
  float: left
  width: columns(4)
  margin-left: unit((GUTTER_WIDTH / GRID_WIDTH) * 100, '%')

  &:first-child
    margin-left: 0

.instructions
  display: table
  width: 100%

  .question
    display: table-cell
    padding-right: 1em
    text-align: left
    vertical-align: middle

  .answers
    display: table-cell
    text-align: right
    vertical-align: middle
    white-space: nowrap

    button
      @extends #_STANDARD_BUTTON

h1
  font-size: 42px
  font-weight: inherit
  margin: 3rem 0

  & ~ p
    font-size: 18px
    margin: 3rem 0

h2
  font-size: 18px
  font-weight: 900
  letter-spacing: 2px
  margin: 2rem 0
  text-transform: uppercase

  & + p
    font-size: 28px
    margin: 2rem 0

hr
  border: 1px solid transparent
  border-top-color: inherit

a
  color: inherit
  text-decoration: none

button
  appearance: none
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  margin: 0
  padding: 0

  &:disabled
    opacity: 0.5
    pointer-events: none
