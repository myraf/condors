html
  background: white
  color: MEDIUM_GRAY
  font: 16px Lato, sans-serif
  font-weight: REGULAR
  height: 100%
  overflow-x: auto
  overflow-y: scroll
  position: relative

body
  margin: 0

.content-block
  padding: 1em 0 2em

  &.reversed
    background: DARK_GRAY
    color: #fff

.content-container
  clearfix()
  margin: 0 auto
  max-width: 1080px
  width: SITE_WIDTH

.quarter-column
  float: left
  width: columns(4)
  margin-right: unit((GUTTER_WIDTH / GRID_WIDTH) * 100, '%')
  margin-bottom: 1em

  &:nth-child(4n)
    margin-right: 0

  img,
  svg
    max-width: 100%

.instructions
  display: table
  width: 100%

  .question
    display: table-cell
    padding-right: 1em
    text-align: left
    vertical-align: middle

  .answers
    display: table-cell
    text-align: right
    vertical-align: middle
    white-space: nowrap

    button
      @extends #_STANDARD_BUTTON

h1
  font-size: 42px
  font-weight: LIGHT
  margin: 0.5em 0

  & ~ p
    font-size: 18px
    font-weight: LIGHT
    line-height: 26px
    margin: 1.5em 0

h2
  font-size: 18px
  // font-weight: BOLD
  letter-spacing: 2px
  margin: 1.5em 0
  text-transform: uppercase

  & ~ p
    font-size: 28px
    font-weight: LIGHT
    line-height: 40px
    margin: 1em 0

.caption
  font-size: 12px

hr
  border: 1px solid transparent
  border-top-color: inherit
  margin: 2em 0

.framed
  border: 2px solid white
  border-radius: 50%
  box-shadow: 0 3px 10px -3px black

a
  color: inherit
  text-decoration: none

button
  appearance: none
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  margin: 0
  padding: 0
  text-shadow: inherit

a:not([href]),
button:disabled
  opacity: 0.5
  pointer-events: none
