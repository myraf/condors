html
  font: 16px MAIN_FONT_FAMILY
  height: 100%
  min-height: 480px
  position: relative

body
  margin: 0

a
  color: inherit
  text-decoration: none

button
  appearance: none
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  margin: 0
  padding: 0

  &:disabled
    opacity: 0.5
    pointer-events: none
