INSTRUCTIONS_HEIGHT = 12.5%

.classifier
  bottom: 0
  left: 0
  overflow: hidden
  position: absolute
  right: 0
  top: SITE_NAVIGATION_HEIGHT

  .subject-for-size
    height: auto
    max-height: ((100 - INSTRUCTIONS_HEIGHT) - 5)
    max-width: 100%
    position: absolute
    visibility: hidden
    width: auto

  .subject
    cursor: crosshair
    left: 50%
    position: absolute
    top: ((100 - INSTRUCTIONS_HEIGHT) / 2)
    transform: translate(-50%, -50%)
    transition:
      opacity 0.75s ease-in-out,
      top 0.75s ease-in-out,
      transform 0.75s ease-in-out
    z-index: 1

  .tag-marker
    fill: rgba(#fff, 0.8)

    &:hover
      fill: #fff

  .tag-label
    fill: #666
    font-family: inherit
    font-size: inherit
    pointer-events: none

  .marking-instructions
    bottom: 0
    height: INSTRUCTIONS_HEIGHT
    left: 0
    position: absolute
    right: 0
    transition: bottom 0.75s ease-in-out

  .question
    position: absolute
    left: 5%
    top: 50%
    transform: translateY(-50%)

  .options
    position: absolute
    right: 5%
    top: 50%
    transform: translateY(-50%)

    button
      @extends #_STANDARD_BUTTON

.inspecting-individuals
  .subject
    opacity: 0.5
    top: 95%
    transform: translate(-50%, 0)

    &:hover
      opacity: 1
      top: ((100 - INSTRUCTIONS_HEIGHT) / 2)
      transform: translate(-50%, -50%)

  .marking-instructions
    bottom: (12.5 - 90)%

.showing-summary
  .marking-instructions
    bottom: (12.5 - 90)%
