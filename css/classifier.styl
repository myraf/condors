.classifier
  bottom: 0
  left: 0
  position: absolute
  right: 0
  top: SITE_NAVIGATION_HEIGHT

  .subject-container
    position: absolute
    top: 0
    bottom: 100px
    left: 0
    overflow: auto
    right: 0

  .subject
    display: block
    left: 50%
    max-height: 90%
    min-height: 100px
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)

  .instructions
    bottom: 0
    height: 100px
    left: 0
    position: absolute
    right: 0

  .question
    position: absolute
    left: 5%
    top: 50%
    transform: translateY(-50%)

  .options
    position: absolute
    right: 5%
    top: 50%
    transform: translateY(-50%)
