.classifier
  .subject
    display: table

  .image-container
    display: table-cell
    vertical-align: middle

    .marking-surface
      height: 512px
      width: 640px
      max-width: 100%

  .details-editor
    display: table-cell
    padding: 0 15px 0 20px
    position: relative
    text-align: center
    vertical-align: middle

    button
      @extends #_STANDARD_BUTTON

      &.selected
        background: black
        color: white
