.classifier
  .subject
    background: MEDIUM_GRAY
    border-radius: 5px
    cursor: crosshair
    position: relative
    text-align: center
    transition:
      opacity 0.75s ease-in-out,
      transform 0.75s ease-in-out
    z-index: 1

  .marking-surface
    position: relative

  .tag-marker
    fill: rgba(#fff, 0.8)

    &:hover
      fill: #fff

  .tag-label
    fill: #666
    font-family: inherit
    font-size: inherit
    pointer-events: none

.inspecting-individuals
  .subject
    left: 50%
    opacity: 0.75
    position: fixed
    top: 100%
    transform: translate(-50%, -10%)

    &:hover
      opacity: 1
      transform: translate(-50%, -100%)

  .marking-instructions
    bottom: (12.5 - 90)%

.showing-summary
  .marking-instructions
    bottom: (12.5 - 90)%
