.classifier
  .subject
    background: MEDIUM_GRAY
    cursor: crosshair
    position: relative
    text-align: center
    transform: translateY(0)
    transition:
      opacity 0.75s ease-in-out,
      transform 0.75s ease-in-out
    z-index: 1

  .marking-surface
    position: relative

  .tag-marker
    fill: rgba(#fff, 0.8)

    &:hover
      fill: #fff

  .tag-label
    fill: #666
    font-family: inherit
    font-size: inherit
    pointer-events: none

.inspecting-individuals
  .subject
    opacity: 0.5
    transform: translateY(75%)

    &:hover
      opacity: 1
      transform: translateY(0)

  .marking-instructions
    bottom: (12.5 - 90)%

.showing-summary
  .marking-instructions
    bottom: (12.5 - 90)%
