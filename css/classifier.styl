.classifier
  bottom: 0
  left: 0
  position: absolute
  right: 0
  top: SITE_NAVIGATION_HEIGHT

  .subject-container
    position: absolute
    top: 0
    bottom: 12.5%
    left: 0
    overflow: hidden
    right: 0

  .subject-for-size
    height: auto
    left: 50%
    max-height: 90%
    max-width: 100%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)
    visibility: hidden
    width: auto

  .subject
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)

  .tag-marker
    fill: rgba(#fff, 0.8)

    &:hover
      fill: #fff

  .tag-label
    fill: #666
    font-family: inherit
    font-size: inherit
    pointer-events: none

  .marking-instructions
    bottom: 0
    height: 12.5%
    left: 0
    overflow: hidden
    position: absolute
    right: 0

  .question
    position: absolute
    left: 5%
    top: 50%
    transform: translateY(-50%)

  .options
    position: absolute
    right: 5%
    top: 50%
    transform: translateY(-50%)

    button
      @extends #_STANDARD_BUTTON
